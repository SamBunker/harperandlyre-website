<style>
    /* 404 Page Specific Styles */
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background: linear-gradient(135deg, #FFF8F0 0%, #f5e6d3 100%);
        color: #2C1810;
    }

    .error-404-main {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        margin-top: 80px;
    }

    .error-404-content {
        text-align: center;
        max-width: 600px;
        background: rgba(255, 248, 240, 0.9);
        padding: 3rem 2rem;
        border-radius: 24px;
        box-shadow: 0 10px 40px rgba(44, 24, 16, 0.1);
    }

    .hugo-lost {
        max-width: 280px;
        margin: 0 auto 2rem;
        filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
    }

    .hugo-lost video {
        width: 100%;
        height: auto;
        border-radius: 12px;
    }

    .error-404-title {
        font-family: 'Riffic', 'Bangers', Impact, cursive;
        font-size: clamp(4rem, 10vw, 6rem);
        color: #FF6B35;
        text-shadow: 3px 3px 0 #FFD23F;
        margin-bottom: 1rem;
        line-height: 1;
    }

    .error-404-subtitle {
        font-family: 'Fredoka', Arial, sans-serif;
        font-size: clamp(1.5rem, 4vw, 2rem);
        color: #2C1810;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .error-404-message {
        font-size: clamp(1rem, 2.5vw, 1.2rem);
        color: #5C4A42;
        margin-bottom: 2.5rem;
        line-height: 1.6;
    }

    .error-404-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 2.5rem;
        font-size: 1.2rem;
        font-weight: 600;
        color: #FFF8F0;
        background: linear-gradient(135deg, #FF6B35, #F7931E);
        border: none;
        border-radius: 12px;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 6px 20px rgba(255, 107, 53, 0.3);
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .error-404-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(255, 107, 53, 0.4);
        background: linear-gradient(135deg, #F7931E, #FF6B35);
    }

    .error-404-btn:active {
        transform: translateY(0);
    }

    .error-404-btn span {
        font-size: 1.5rem;
    }

    /* Footer - use default styles from main.handlebars */

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .error-404-main {
            padding: 1.5rem;
            margin-top: 60px;
        }

        .error-404-content {
            padding: 2rem 1.5rem;
            border-radius: 16px;
        }

        .hugo-lost {
            max-width: 220px;
            margin-bottom: 1.5rem;
        }

        .error-404-title {
            margin-bottom: 0.75rem;
        }

        .error-404-message {
            margin-bottom: 2rem;
        }

        .error-404-btn {
            padding: 0.875rem 2rem;
            font-size: 1rem;
        }
    }

    @media (max-width: 480px) {
        .error-404-content {
            padding: 1.5rem 1rem;
        }

        .hugo-lost {
            max-width: 180px;
        }
    }
</style>

<!-- Main 404 Content -->
<main class="error-404-main">
    <div class="error-404-content">
        <!-- Hugo Video -->
        <div class="hugo-lost">
            <video autoplay loop muted playsinline>
                <source src="/img/hugoAnim.webm" type="video/webm">
                Your browser does not support the video tag.
            </video>
        </div>

        <!-- Error Text -->
        <h1 class="error-404-title">404</h1>
        <h2 class="error-404-subtitle">Page Not Found!</h2>
        <p class="error-404-message">
            Not sure where you're going, but you're lost!<br>
            Even Hugo's map doesn't show this place.
        </p>

        <!-- Home Button -->
        <a href="/" class="error-404-btn">
            <span>üè†</span>
            Take Me Home
        </a>
    </div>
</main>

<script>
    // Enable mobile hamburger menu on 404 page
    document.addEventListener('DOMContentLoaded', () => {
        const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
        const navMenu = document.querySelector('.nav-menu');

        if (mobileMenuToggle && navMenu) {
            mobileMenuToggle.addEventListener('click', () => {
                const isExpanded = mobileMenuToggle.getAttribute('aria-expanded') === 'true';
                mobileMenuToggle.setAttribute('aria-expanded', !isExpanded);
                navMenu.classList.toggle('active');
                mobileMenuToggle.classList.toggle('active');
            });
        }
    });
</script>
