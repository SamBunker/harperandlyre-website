    <script>
        // Capture styles immediately as DOM elements appear
        let beforeStyles = {};
        let stylesCaptured = false;

        function captureInitialStyles() {
            if (stylesCaptured) return;

            const testElements = ['.hero-title', '.demo-badge', '.btn-primary', '.navbar', '.hero-background'];
            let foundCount = 0;

            testElements.forEach(selector => {
                const el = document.querySelector(selector);
                if (el) {
                    foundCount++;
                    const computed = window.getComputedStyle(el);
                    beforeStyles[selector] = {
                        background: computed.background,
                        color: computed.color,
                        fontSize: computed.fontSize,
                        padding: computed.padding,
                        margin: computed.margin,
                        display: computed.display,
                        position: computed.position
                    };
                }
            });

            if (foundCount >= 2) {
                stylesCaptured = true;
                performanceDebug.log('BEFORE Styles Captured (inline CSS only)', beforeStyles);
            }
        }

        // Try to capture as soon as possible
        if (document.body) {
            captureInitialStyles();
        }

        // Fallback: capture on DOMContentLoaded if not already captured
        document.addEventListener('DOMContentLoaded', captureInitialStyles);

        // Detect when external CSS loads and compare
        let cssLoadedBefore = false;
        const externalCssLink = document.querySelector('link[href*="index.css"]');

        if (externalCssLink) {
            const observer = new MutationObserver(function() {
                if (!cssLoadedBefore && externalCssLink.sheet) {
                    cssLoadedBefore = true;

                    // Compare styles after external CSS loads
                    setTimeout(() => {
                        const afterStyles = {};
                        Object.keys(beforeStyles).forEach(selector => {
                            const el = document.querySelector(selector);
                            if (el) {
                                const computed = window.getComputedStyle(el);
                                afterStyles[selector] = {
                                    background: computed.background,
                                    color: computed.color,
                                    fontSize: computed.fontSize,
                                    padding: computed.padding,
                                    margin: computed.margin
                                };
                            }
                        });

                        performanceDebug.log('AFTER Styles', afterStyles);

                        // Find differences
                        Object.keys(beforeStyles).forEach(selector => {
                            const before = beforeStyles[selector];
                            const after = afterStyles[selector];
                            const changes = {};

                            Object.keys(before).forEach(prop => {
                                if (before[prop] !== after[prop]) {
                                    changes[prop] = { before: before[prop], after: after[prop] };
                                }
                            });

                            if (Object.keys(changes).length > 0) {
                                console.log(`üîÑ ${selector} CHANGED:`, changes);
                            }
                        });
                    }, 10);
                }
            });
            observer.observe(document.head, { childList: true, subtree: true });
        }

        // Track various page load events
        document.addEventListener('DOMContentLoaded', function() {
            performanceDebug.log('DOMContentLoaded', 'DOM fully parsed');
        });

        window.addEventListener('load', function() {
            performanceDebug.log('Window Load', 'All resources loaded');

            // Check font loading status
            if (document.fonts) {
                document.fonts.ready.then(function() {
                    performanceDebug.log('Fonts Ready', 'All fonts loaded');
                    const loadedFonts = [];
                    document.fonts.forEach(font => {
                        if (font.status === 'loaded') {
                            loadedFonts.push(font.family);
                        }
                    });
                    performanceDebug.log('Loaded Fonts', loadedFonts.join(', '));
                });
            }

            // Print summary
            setTimeout(function() {
                console.log('\nüìä PERFORMANCE SUMMARY:');
                console.table(performanceDebug.events);

                // Check for layout shifts
                const navOffset = document.querySelector('.navbar')?.offsetTop;
                performanceDebug.log('Navbar Position', `Top: ${navOffset}px`);

                // Final computed styles
                console.log('\nüé® FINAL STYLES:');
                console.log('Body BG:', window.getComputedStyle(document.body).backgroundColor);
                console.log('Body Font:', window.getComputedStyle(document.body).fontFamily);
            }, 100);
        });
    </script>
