    <script>
        performanceDebug.log('Body Start', 'Body tag opened');

        // Loading counter animation
        let counter = 0;
        const counterElement = document.getElementById('loading-counter');
        const loadingScreen = document.getElementById('loading-screen');
        let loadingComplete = false;
        let fontsReady = false;
        let windowLoaded = false;

        // Animate counter from 0 to 100
        const counterInterval = setInterval(() => {
            counter += Math.floor(Math.random() * 5) + 1; // Random increment 1-5
            if (counter >= 100) {
                counter = 100;
                clearInterval(counterInterval);
                loadingComplete = true;
                checkAndHideLoader();
            }
            counterElement.textContent = counter;
        }, 30); // Update every 30ms for smooth animation

        // Check if fonts are loaded
        if (document.fonts && document.fonts.ready) {
            document.fonts.ready.then(function() {
                fontsReady = true;
                performanceDebug.log('Fonts Ready', 'All fonts loaded');
                checkAndHideLoader();
            });
        } else {
            fontsReady = true;
        }

        // Check if window is fully loaded
        window.addEventListener('load', function() {
            windowLoaded = true;
            performanceDebug.log('Window Load', 'All resources loaded');
            checkAndHideLoader();
        });

        // Hide loader when everything is ready
        function checkAndHideLoader() {
            if (loadingComplete && fontsReady && windowLoaded) {
                setTimeout(() => {
                    loadingScreen.classList.add('hidden');
                    document.body.classList.add('fonts-loaded');
                    performanceDebug.log('Loading Complete', 'Website revealed');
                }, 300); // Small delay after hitting 100
            }
        }

        // Immediately try to capture styles before external CSS loads
        if (typeof captureInitialStyles === 'function') {
            setTimeout(captureInitialStyles, 0);
        }
